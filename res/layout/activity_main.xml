<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.adapterdemo.MainActivity" >

    <Button
        android:id="@+id/array_adapter_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/array_adapter_listview"
        android:textSize="20pt" />

    <Button
        android:id="@+id/array_adapter_extends_listActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/array_adapter_extends_listActivity"
        android:textSize="20pt" />

</LinearLayout>